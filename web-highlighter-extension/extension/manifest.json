{
  "manifest_version": 3,
  "name": "Web Highlighter & Saver",
  "version": "1.0",
  "description": "Highlight text on web pages and save them for later.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
